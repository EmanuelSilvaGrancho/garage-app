@page "/modelo/{marca}"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Components

<h1>Modelos da Marca: @marca</h1>

<div class="car-selection" style="display: flex; gap: 20px; flex-wrap: wrap; justify-content: center;">
    
    @if (marca?.ToLower() == "toyota")
    {
        <!-- Card para Toyota Yaris GR -->
        <div class="car-card"
             style="cursor: pointer; border: 1px solid #ccc; padding: 10px; border-radius: 5px; width: 240px; text-align: center;"
             @onclick='() => SelecionarModelo("toyota-yaris-gr")'>
            <img src="yaris.jpg" alt="Toyota Yaris GR" style="width: 100%; border-radius: 5px;">
            <h3>Toyota Yaris GR</h3>
        </div>
    }
    else if (marca?.ToLower() == "ford")
    {
        <!-- Card para Ford Mustang -->
        <div class="car-card"
             style="cursor: pointer; border: 1px solid #ccc; padding: 10px; border-radius: 5px; width: 240px; text-align: center;"
             @onclick='() => SelecionarModelo("ford-mustang")'>
            <img src="mustang.jpg" alt="Ford Mustang" style="width: 100%; border-radius: 5px;">
            <h3>Ford Mustang</h3>
        </div>
    }
    else
    {
        <p>Marca n√£o encontrada.</p>
    }
</div>

@code {
    [Parameter]
    public string marca { get; set; }

    private void SelecionarModelo(string modeloId)
    {
        NavigationManager.NavigateTo($"/detalhes/{modeloId}");
    }
}