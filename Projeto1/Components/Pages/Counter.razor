@page "/counter"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<h1>Selecione o Carro de Interesse</h1>

<div class="car-selection" style="display: flex; gap: 20px; flex-wrap: wrap; justify-content: center;">
    <!-- Card para Toyota Yaris GR -->
    <div class="car-card"
         style="cursor: pointer; border: 1px solid #ccc; padding: 10px; border-radius: 5px; width: 240px; text-align: center;"
         @onclick='() => SelecionarCarro("toyota-yaris-gr")'>
        <img src="yaris.jpg" alt="Toyota Yaris GR" style="width: 100%; border-radius: 5px;">
        <h3>Toyota Yaris GR</h3>
    </div>

    <!-- Card para Ford Mustang (exemplo) -->
    <div class="car-card"
         style="cursor: pointer; border: 1px solid #ccc; padding: 10px; border-radius: 5px; width: 240px; text-align: center;"
         @onclick='() => SelecionarCarro("ford-mustang")'>
        <img src="mustang.jpg" alt="Ford Mustang" style="width: 100%; border-radius: 5px;">
        <h3>Ford Mustang</h3>
    </div>

    <!-- Adicione quantos carros desejar -->
</div>

@code {
    private void SelecionarCarro(string carroId)
    {
        // Redireciona para a página de detalhes passando o identificador do carro na URL
        NavigationManager.NavigateTo($"/detalhes/{carroId}");
    }
}